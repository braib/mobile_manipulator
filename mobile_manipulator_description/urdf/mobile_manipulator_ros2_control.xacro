<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:if value="${use_ros2_control}">
    
    <ros2_control name="${name}_system" type="system">
      
      <!-- Hardware Interface -->
      <xacro:if value="${use_ignition}">
        <hardware>
          <plugin>ign_ros2_control/IgnitionSystem</plugin>
          <param name="position_proportional_gain">5.0</param>
        </hardware>
      </xacro:if>
      
      <xacro:if value="${use_mock_hardware}">
        <hardware>
          <plugin>mock_components/GenericSystem</plugin>
          <param name="mock_sensor_commands">false</param>
          <param name="state_following">true</param>
        </hardware>
      </xacro:if>
      
      <!-- ============================================ -->
      <!-- WHEEL VELOCITY CONTROLLERS - UPDATED LIMITS -->
      <!-- ============================================ -->
      
      <joint name="${frame_prefix}bl_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-200.0</param>
          <param name="max">200.0</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      
      <joint name="${frame_prefix}br_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-200.0</param>
          <param name="max">200.0</param>
        </command_interface>
        <state_interface name="position"/>
